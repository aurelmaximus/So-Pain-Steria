<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <!-- Configuration de la servlet de Spring -->
  <servlet>
  	<servlet-name>dispatcher</servlet-name>
  	<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
  	<!-- Il faut rajouter la config de Spring comme c'est le servlet Spring, pas un quelconque -->
  	<init-param>
  	<!-- Definition du mode de configuration Spring -->
  	<param-name>contextClass</param-name>
  	<param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
  	</init-param>
  	<!-- Classe de configuration qu'utilse l'objet (le ctx Spring) de dessus -->
  	<init-param>
  	<param-name>contextConfigLocation</param-name>
  	<param-value>quest.config.WebConfig</param-value>
  	</init-param>
  	<!-- Charge le contexte de Spring au dÃ©marrage (nbre d'instance : 1 ici) -->
  	<load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
  	<servlet-name>dispatcher</servlet-name>
  	<url-pattern>/</url-pattern>
  </servlet-mapping>

</web-app>